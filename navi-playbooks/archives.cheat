% archives

# Zip a folder/directory
zip -r <what>.zip <what>
$ what: /usr/bin/ls -lah | grep "^d" | awk '{print $9}' 

# Untar a .tar.gz archive
tar xvf <archive>
$ archive: /usr/bin/ls -lah | grep ".tar.gz" | awk '{print $9}' 

# Unzip a zip archive
unzip <archive> -d <destination_name>
$ archive: /usr/bin/ls -lah | grep "zip" | awk '{print $9}' 
